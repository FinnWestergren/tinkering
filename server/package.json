{
  "dependencies": {
    "http": "0.0.1-security",
    "router": "^1.3.5",
    "typescript": "^4.4.4"
  },
  "scripts": {
    "build": "babel index.ts -d static",
    "hot": "nodemon --exec babel-node -- ./index.ts"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/node": "^7.16.0",
    "@types/node": "^16.11.7",
    "babel-cli": "^6.26.0",
    "babel-preset-latest": "^6.24.1",
    "nodemon": "^2.0.15"
  },
  "babel": {
    "presets": [
      "latest"
    ],
    "parserOpts": {
        "plugins": ["typescript"]
      }
  },
  "nodemon": {
    "ignore": [
      "static/*",
      "node_modules/*"
    ]
  }
}
